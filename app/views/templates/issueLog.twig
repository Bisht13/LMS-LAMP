{% extends "templates/base.twig" %}

{% block title %}R-Land Library
{% endblock %}

{% block body %}

	{% include("templates/navbarAdmin.twig") %}

	<div class="d-flex justify-content-center align-items-center">
		<h1>Issue Log</h1>
	</div>
	<br>
	<div class="issue-data tableDisplay">
		<table border="1" class="table table-success table-striped">
			<tr>
				<th>Book Name</th>
				<th>Issued By</th>
				<th>Issued On</th>
				<th>Return By</th>
				<th>Fine (in Rupees)</th>
			</tr>

			{% if issueData != null %}
				{% for data in issueData %}
					<tr>
						<td>{{ data.name }}</td>
						<td>{{ data.issuedby }}</td>
						<td>{{ data.issuedon|date('d-m-Y H:i:s') }}</td>
						<td>{{ data.returnby|date('d-m-Y H:i:s') }}</td>
						<td>{{ data.fine }}</td>
					</tr>
				{% endfor %}
			{% else %}
				<tr>
					<td colspan="7">No Data Found</td>
				</tr>
			{% endif %}
		</table>
	</div>
{% endblock %}
