{% extends "templates/base.twig" %}

{% block title %}R-Land Library
{% endblock %}

{% block body %}

	{% include("templates/navbarDefault.twig") %}

	<br>
	<div class="form">
		<div class="d-flex justify-content-center align-items-center">
			<h1>Login</h1>
		</div>
		<br>
		<form action="/login" method="POST">
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label">Email Address
				</label>
				<div class="col-sm-10">
					<input type="text" name="email" class="form-control" aria-describedby="emailHelp">
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-2 col-form-label">Password
				</label>
				<div class="col-sm-10">
					<input type="password" name="password" class="form-control">
				</div>
			</div>
			<div class="row g-3 align-items-center">
				<div class="d-flex justify-content-center align-items-center">
					<input type="submit" value="Login" class="btn btn-primary" id="button">
				</div>
			</div>
		</div>
		<br>
		{% if wrong_password %}
			<p>
				<em>
					<strong>Wrong password</strong>. Please try again.</em>
			</p>
		{% endif %}
		{% if wrong_email %}
			<p>
				<em>
					<strong>Email not found</strong>. Please try again.</em>
			</p>
		{% endif %}
	</div>
{% endblock %}
